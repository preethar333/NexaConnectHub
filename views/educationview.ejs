<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Creepster&family=Nosifer&display=swap" rel="stylesheet">
  <link rel="stylesheet" type="text/css" href="css/style.css">
  <title>blog</title>
 
    <style>
  
      .blogGrid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
        padding:20px;
        margin:20px;
      }
  
      .blogData {
       
        border-radius: 10px;
        padding: 20px;
        border: 2px solid #4B5B4C;
      }
  
      .pay-button {
        display: inline-block;
        background-color: #9EB09F;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        text-decoration: none;
        font-size: 16px;
        margin-top: 10px;
        cursor: pointer;
      }
  
      .pay-button:hover {
        background-color: #4B5B4C;
      }

      .add-post-button {
  display: inline-block;
  background-color: #4B5B4C;
  color: #fff;
  padding: 10px 20px;
  border: none;
  border-radius: 5px;
  text-decoration: none;
  font-size: 16px;
  margin-top: 10px;
  cursor: pointer;
}

.add-post-button:hover {
  background-color: #9EB09F;
}
.blogData {
      border-radius: 10px;
      padding: 20px;
      border: 2px solid #4B5B4C;
      position: relative; /* Added for positioning */
    }
    .description-container {
    max-height: 100px; /* Set the initial max height to show only a portion of the description */
    overflow: hidden;
    position: relative;
  }

  .description-container.expanded {
    max-height: none; /* Remove the max height when expanded */
  }

  .description-container::after {
    content: '';
    position: absolute;
    bottom: 0;
    right: 0;
    width: 100%;
    height: 20px; /* Adjust as needed to create space for "Read More" link */
    background: linear-gradient(to bottom, rgba(255, 255, 255, 0), white); /* Create a gradient fade effect */
  }

   
    </style>
  </head>
  
  <body class="blog">
    <%- include('nav') %>

    
    <main>
      <div class="container"> 
        <h1>All Education Posts</h1>
        <a href="/add-education" class="add-post-button">Add New Post</a>
        <section>
          <div class="blogGrid">
            <% educationPosts.forEach(function(educationPost) { %>
    <div class="blogData">
        <table>
            <tr>
                <th>Category: </th>
                <td><%= educationPost.educationCategory %></td>
            </tr>
            <tr>
                <th>Name: </th>
                <td><%= educationPost.Name %></td>
            </tr>
            <tr>
                <th>Email: </th>
                <td><%= educationPost.Email %></td>
            </tr>
            <tr>
              <td>
                <div class="description-container" id="postDescription<%= educationPost.id %>">
                  <%- educationPost.Description %>
                </div>
                <!-- Read More link -->
                <a href="#" onclick="toggleDescription('<%= educationPost.id %>')">Read More</a>
              </td>
            </tr>
            <tr>
                <th>Image: </th>
                <td><img src="<%= educationPost.ImagePath %>" alt="No image found" height="200"></td>
            </tr>
            <tr>
                <td colspan="2">
                    <a href="/payment?blogid=<%= educationPost._id %>" class="pay-button">Pay Now</a>
                </td>
            </tr>
        </table>
    </div>
<% }) %>

          </div>
        </section>
      </div> 
    </main>
    <%- include('footer') %>
    <script>
      // JavaScript function to toggle the display of the full description
      function toggleDescription(educationpostId) {
        var descriptionContainer = document.getElementById('postDescription' + educationpostId);
        descriptionContainer.classList.toggle('expanded');
      }
    </script>
    
    

  </body>
  </html>
  