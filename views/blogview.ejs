<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Creepster&family=Nosifer&display=swap" rel="stylesheet">
  <link rel="stylesheet" type="text/css" href="css/style.css">
  <title>blog</title>
</head>

<body class="blog">
  <nav>
    <a href="/blogs">View All Blogs</a>
    <a href="/login">login</a>
    <a href="/signup">Signup</a>
    <a href="/">Add New Blog</a> 
  </nav>
  <main>
    <h1>Blog</h1>
    <section>
      <div class="blogData">
        <% blogs.forEach(function(blog) { %>
          <table>
            <tr>
              <th>Name: </th>
              <td>
                <%= blog.Name %>
              </td>
            </tr>
            <tr>
              <th>Email: </th>
              <td>
                <%= blog.Email %>
              </td>
            </tr>
            <tr>
              <th>Description: </th>
              <td>
                <%- blog.Description %>
              </td>
            </tr>
            <tr>
              <th> Image: </th>
              <td>
                <img src="<%=blog.ImagePath%>" alt="No image found" height="200">
              </td>
            </tr>

          </table>
          <% }) %>
      </div>
    </section>
  </main>

  
</body>

</html>