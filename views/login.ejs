<!-- login.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>

    <style>
        body {
            font-family: 'Arial', sans-serif; /* Set your preferred font family */
            text-align: center;
            margin: 0;
            padding: 0;
        }

        h1 {
            color: #4B5B4C; /* Set your heading color */
        }

        form {
            margin-top: 20px;
        }

        label {
            display: block;
            margin: 10px 0;
        }

        input {
            padding: 10px;
            margin: 5px 0 20px;
            width: 30%;
            box-sizing: border-box;
        }

        input[type="submit"] {
            background-color: #9EB09F; /* Set your button background color */
            color:white; /* Set your button text color */
            cursor: pointer;
        }

        input[type="submit"]:hover {
            background-color: #6C7D6A; /* Set your button background color on hover */
        }
    </style>
</head>

<body>
    <h1>Login</h1>

    <form action="/signin" method="post">
        <label for="userName">Username:</label>
        <input type="text" id="userName" name="userName" required>
        <br>
        <label for="password">Password:</label>
        <input type="password" id="password" name="password" required>
        <br>
        <input type="submit" value="Login">
    </form>
    <%- include('footer') %>

</body>

</html>
